@model dz3.Models.GuestResponse
@{
	Layout = null;
}

<!doctype html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport"
		  content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
	<meta http-equiv="X-UA-Compatible" content="ie=edge">
	<link href="~/Content/css/style.css" rel="stylesheet" />
	<title>Запрошення</title>
	<style>

		body {
			height: 80vh;
			background: #fffee8;
			display: flex;
			align-items: center;
			justify-content: center;
			flex-direction: column;
		}

		p, a, h3 {
			font-family: 'Balsamiq Sans', cursive;
			font-size: 1.4em;
		}

		p {
			display: flex;
			justify-content: space-between;
			gap
		}

		a {
			color: white;
			text-decoration: none;
		}

		.btn {
			padding: 10px 20px;
			background-color: #42C029FF;
			color: #fff;
			cursor: pointer;
			border: none;
			border-radius: 8px;
			margin-left: 15px;
			margin-bottom: 5px;
			font-family: 'Balsamiq Sans', cursive;
			font-size: 1.15em;
		}

			.btn:hover {
				text-decoration: underline;
				background-color: #236516;
			}

		input:not(input[type="submit"]), select {
			width: 300px;
			font-size: 1em;
			padding: 10px;
			border: 1px solid #ccc;
			border-radius: 5px;
			margin-left: 15px;
		}

		.field-validation-error {
			color: #f00;
		}

		.field-validation-valid {
			display: none;
		}

		.input-validation-error {
			border: 1px solid #f00;
			background-color: #fee;
		}

		.validation-summary-errors {
			font-weight: bold;
			color: #f00;
		}

		.validation-summary-valid {
			display: none;
		}
	</style>
</head>
<body>
	@using (Html.BeginForm()) {
		@Html.ValidationSummary()
		<p>Ваше ім'я: @Html.TextBoxFor(x => x.Name)</p>
		<p>Ваш email: @Html.TextBoxFor(x => x.Email)</p>
		<p>Ваш телефон: @Html.TextBoxFor(x => x.Phone)</p>
		<p>
			Ви прийдете? @Html.DropDownListFor(x => x.WillAttend, new[] {
		new SelectListItem() {Text = "Так, звичайно я буду", Value = Boolean.TrueString},
		new SelectListItem() {Text = "Ні, я не зможу", Value = Boolean.FalseString}
		})
		</p>
		<input type="submit" value="Відправити форму RSVP" class="btn"/>
	}
</body>
</html>